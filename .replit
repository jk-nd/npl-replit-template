# NPL + React Replit Template
# Build frontends on Replit that connect to Noumena Cloud

run = "cd frontend && npm run dev"
entrypoint = "frontend/src/App.tsx"

hidden = [".config", "node_modules", ".git", "dist"]
modules = ["nodejs-20", "bash", "web"]

[nix]
channel = "stable-25_05"

[env]
PATH = "/home/runner/.npl/bin:/home/runner/.npl/lsp:${PATH}"

# NPL Language configuration
[languages.npl]
pattern = "**/*.npl"
syntax = ".replit-config/syntaxes/npl.tmLanguage.json"

[languages.npl.languageServer]
start = "/home/runner/.npl/lsp/language-server --stdio"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
run = ["sh", "-c", "cd frontend && npm run build && npm run preview"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Dev Server"

[[workflows.workflow]]
name = "Start Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev -- --port 5000 --host 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

