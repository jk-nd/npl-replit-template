# NPL + React Replit Template
# Build frontends on Replit that connect to Noumena Cloud

# On boot: Install tools only (no config required)
# Full setup: run 'make setup' (configures env, prompts for login)
onBoot = "make install lsp 2>/dev/null || true"

# Run command checks for setup first
run = "make run"
entrypoint = "frontend/src/App.tsx"

hidden = [".config", "node_modules", ".git", "dist"]
modules = ["nodejs-20", "bash", "web"]

[nix]
channel = "stable-25_05"

[env]
PATH = "/home/runner/.npl/bin:/home/runner/.npl/lsp:${PATH}"

# NPL Language configuration
# Note: Syntax highlighting not available - Replit doesn't support custom grammars
# and NPL Language Server doesn't provide semantic tokens yet.
# The LSP still provides error diagnostics.
[languages.npl]
pattern = "**/*.npl"
rootPatterns = ["npl/src/main", "migration.yml"]

[languages.npl.languageServer]
start = "/home/runner/.npl/lsp/language-server --stdio"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
run = ["sh", "-c", "cd frontend && npm run build && npm run preview"]

# Replit allows max 10 workflows - keeping only essential ones
# Use 'make <command>' directly for others (see: make help)
[workflows]
runButton = "üöÄ Full Setup"

[[workflows.workflow]]
name = "üöÄ Full Setup"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make setup"

[[workflows.workflow]]
name = "‚ñ∂Ô∏è Start Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make run"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "‚òÅÔ∏è Deploy to Cloud"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make deploy"

[[workflows.workflow]]
name = "üîÑ Generate API Client"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make client"

[[workflows.workflow]]
name = "‚úÖ Validate NPL"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make check"

[[workflows.workflow]]
name = "üèóÔ∏è Build Production"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make build"

[[workflows.workflow]]
name = "üë• Provision Users"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make users"

[[workflows.workflow]]
name = "üßπ Clean"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make clean"

[agent]
expertMode = true
